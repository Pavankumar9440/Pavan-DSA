#include<stdio.h>
int main()
{
	int n,i;
	printf("enter no.of elements : ");
	scanf("%d",&n);
	int arr[n];
	for(i=0;i<n;i++)
	{
		scanf("%d",&arr[i]);
	}
	int pos,val;
	printf("enter the position of insertion : ");
	scanf("%d",&pos);
	printf("enter the value for insertion : ");
	scanf("%d",&val);
	for(i = n; i > pos; i--) {
		arr[i] = arr[i - 1];
	}
	arr[pos] = val;
	n++;
	printf("Array after insertion:\n");
	for(i = 0; i < n; i++) {
		printf("%d ",arr[i]);
	}	
}


#include<stdio.h>
int main()
{
	int n,i;
	printf("enter no.of elements : ");
	scanf("%d",&n);
	int arr[n];
	for(i=0;i<n;i++)
	{
		scanf("%d",&arr[i]);
	}
	int pos,val;
	printf("enter the position of deltion : ");
	scanf("%d",&pos);
	if(pos < 0 || pos >= n) {
		printf("Invalid position!\n");
		return 1;
	}
	for(i = pos; i < n - 1; i++) {
		arr[i] = arr[i + 1];
	}
	n--; 
	printf("Array after deletion:\n");
	for(i = 0; i < n; i++) {
		printf("%d ",arr[i]);
	}
}
